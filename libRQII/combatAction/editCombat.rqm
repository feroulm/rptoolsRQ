[h: link3 = macroLinkText("updateCcCA@Lib:RQII", "all")]
<form action="[r:link3]" method="json">
<table>
<tr>
  <td><b>ccCA :</b></td>
  <td><input type="text" name="ccCA" size="3" align="right"></td>
</tr>
<tr>
  <td><b>Location :</b></td>
  <td>
    <select name="tokenId" size="1">
      [r, foreach(c, tokens, ""), code: {
      	  [h: tokenId = json.get(c, "tokenId")]
          <option value=[r: tokenId]>[r: getName(tokenId)]</option>
      }]
    </select>
  </td>
</tr>
</table>
<input type="submit" name="edit_btn" value="Update ccCA">
</form>
[h: linkUpdateGlobalCombat = macroLinkText("updateGlobalCombat@Lib:RQII", "all")]
<form action="[r:linkUpdateGlobalCombat]" method="json">
  <input type="hidden" name="tokens" value=[r: tokens]>
  <input type="hidden" name="action" value="nxtcycle">
  <input type="submit" name="edit_btn" value="Next Cycle">
</form>
<form action="[r:linkUpdateGlobalCombat]" method="json">
  <input type="hidden" name="tokens" value=[r: tokens]>
  <input type="hidden" name="action" value="rollinit">
  <input type="submit" name="edit_btn" value="Roll Initiative">
</form>